---
import GithubIcon from "../components/GithubIcon.astro";

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Miguel Fuertes: Software Engineer" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<nav>
			<div
				class="max-w-screen-xl flex flex-wrap items-center justify-between mx-auto p-4"
			>
				<a href="/" class="flex items-center">
					<img
						src="images/7235263.jpeg"
						class="h-12 mr-3 rounded"
						alt="Flowbite Logo"
					/>
					<div>
						<span
							class="self-center text-2xl font-semibold whitespace-nowrap text-white"
							>Miguel Fuertes</span
						><br />
						<span
							class="self-center text-sm font-semibold whitespace-nowrap text-gray-300"
							>Software Engineer</span
						>
					</div>
				</a>

				<a
					href="https://github.com/hkfuertes"
					class="inline-flex items-center p-2 w-10 h-10 justify-center text-sm rounded-lg md:hidden focus:outline-none focus:ring-2 text-gray-400 hover:bg-gray-700 focus:ring-gray-600"
				>
					<GithubIcon className="w-5 h-5" />
				</a>

				<div
					class="hidden w-full md:block md:w-auto"
					id="navbar-default"
				>
					<a
						href="https://github.com/hkfuertes"
						class="inline-flex justify-center items-center py-3 px-5 text-base font-medium text-center rounded-lg border focus:ring-4 text-white border-gray-700 hover:bg-gray-700 focus:ring-gray-800"
					>
						<GithubIcon className="w-4 h-4 mr-2" />
						Explore
					</a>
				</div>
			</div>
		</nav>

		<main class="mt-4 max-w-screen-xl mx-auto">
			<slot />
		</main>
	</body>
</html>
<style is:global>
	:root {
		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
		);
	}
	html {
		font-family: system-ui, sans-serif;
		background: #13151a;
		background-size: 224px;
	}
	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}
</style>
